Host *
  IdentityAgent ~/.1password/agent.sock
  HashKnownHosts yes

# Azure Repos
Host github.com
  IdentityFile ~/dotfiles/public-keys/github_ed25519.pub
  IdentitiesOnly yes

# GitHub - Fairfax
# usage example: ff-jbarros:ff-jbarros/ff-content.git
Host fairfaxgithub
  HostName github.com
  User git
  IdentityFile ~/dotfiles/public-keys/ntfairfaxdev_rsa.pub
  IdentitiesOnly yes

